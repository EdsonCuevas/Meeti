<main class="contenedor contenedor-formularios no-padding">
    <h1><%- nombrePagina %></h1>

    <form class="default-form" action="/cambiar-password" method="POST">
        <div class="campo">
            <label>Contraseña Actual</label>
            <input type="password" name="anterior" placeholder="Tu Contraseña Actual">
        </div>
        <div class="campo">
            <label>Contraseña Nueva</label>
            <input type="password" name="nuevo" placeholder="Tu Contraseña Nueva">
        </div>
        <div class="enviar">
            <input type="submit" class="btn btn-rosa" value="Cambiar Contraseña">
        </div>
    </form>
</main>